@model UserManagement.Web.Models.Users.UserDetailsViewModel

<h2>@(Model.Id == 0 ? "Add User" : "Edit User") </h2>

<div>
    <form method="post" class="row" enctype="multipart/form-data">
        <div class="row">
            <div class="col-10">
                <div class="border p-3">
                    <input asp-for="@Model.Id" type="hidden" value="@Model.Id" />
                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.Forename" class="form-control border-0 shadow" value="@Model.Forename" />
                        <label class="ms-2">Forename</label>
                        <span asp-validation-for="@Model.Forename" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.Surname" class="form-control border-0 shadow" value="@Model.Surname" />
                        <label class="ms-2">Surname</label>
                        <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.DateOfBirth" class="form-control border-0 shadow" value="@Model.DateOfBirth" />
                        <label class="ms-2">Date Of Birth</label>
                        <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.Email" class="form-control border-0 shadow" value="@Model.Email" />
                        <label class="ms-2">Email</label>
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <select asp-for="IsActive" asp-items="@Model.isActiveOptions" class="form-select border-0 shadow"></select>
                        <label class="ms-2">Account Active</label>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary border form-control">@(Model.Id == 0 ? "Add" : "Update")</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Users" asp-action="List" class="btn btn-outline-secondary border form-control">
                                Return
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

